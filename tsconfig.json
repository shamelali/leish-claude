{
  "compilerOptions": {
    // Environment
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "lib": ["ESNext"],
    "skipLibCheck": true,

    // Outputs
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,
    "noEmit": true,

    // Stricter Typechecking
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Recommended Options
    "strict": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force"
  }
  ,
  "include": [
    "functions/**/*",
    "**/*.ts",
    "**/*.js"
  ],
  "allowJs": true,
  "files": [
    "functions/index.js",
    "functions/test.js"
  ]
}